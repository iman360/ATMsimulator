<Window x:Class="ATM.BillPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM"
        mc:Ignorable="d"
        Title="BillPayment" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290*"/>
            <ColumnDefinition Width="232*"/>
            <ColumnDefinition Width="290*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Back To Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="38" Margin="10,10,0,0" Click="Button_Click_exit" />
        <Button Content="PAY" HorizontalAlignment="Left" Margin="290,234,0,0" VerticalAlignment="Top" Width="214" Height="43" Click="Button_Click" Grid.ColumnSpan="3"/>
        <TextBox x:Name="amountTxt" Grid.Column="1" HorizontalAlignment="Left" Height="31" Margin="10,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="14" Text="123456789"    />
        <Label Content="Bill Number" HorizontalAlignment="Left" Margin="58,117,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.022,0.068" Width="101" FontSize="16" Height="31" Grid.Column="1"/>

    </Grid>
</Window>
